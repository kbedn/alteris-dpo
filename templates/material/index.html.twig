{% extends 'base.html.twig' %}

{% block title %}Material index{% endblock %}

{% block body %}
    <h1>Material index</h1>
    <table class="table table-primary">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Group</th>
                <th>Measure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.name }}</td>
                <td>{{ material.code }}</td>
                <td>{{ material.group }}</td>
                <td>{{ material.unitOfMeasure }}</td>
                <td>
                    <a href="{{ path('material_show', {'id': material.id}) }}">show</a>
                    <a href="{{ path('material_edit', {'id': material.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('material_new') }}">Create new</a>
    <a class="btn btn-dark" href="{{ path('homepage') }}">Back to /</a>
{% endblock %}
