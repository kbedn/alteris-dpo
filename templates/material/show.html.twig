        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('material_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('material_edit', {'id': material.id}) }}">edit</a>

    <a class="btn btn-dark" href="{{ path('homepage') }}">Back to /</a>
{% endblock %}
