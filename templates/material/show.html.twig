{% extends 'base.html.twig' %}

{% block title %}Material{% endblock %}

{% block body %}
    <h1>Material</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ material.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ material.code }}</td>
